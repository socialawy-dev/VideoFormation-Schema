  "global_settings": {
    "timebase": "timecode",
    "fps": 30,
    "resolution_master": { "width": 1920, "height": 1080 },
    "pixel_aspect_ratio": "1.0",
    "color_pipeline": {
      "working_space": "ACEScg",
      "delivery_space_default": "Rec709",
      "lut_default_ref": "LUT_REC709"
    },
    "editorial_policy": {
      "default_handles_frames": 12,
      "proxy_workflow": {
        "enabled": true,
        "format": "h264_low_bitrate",
        "suffix": "_proxy"
      }
    },
    "hardware_constraints": {
      "max_poly_count_per_asset": 50000,
      "max_texture_resolution": 4096,
      "max_realtime_lights": 4,
      "simulation_policy": "baked_only"
    },
    "audio_defaults": {
      "sample_rate_hz": 48000,
      "bit_depth": 24,
      "mix_target": "stereo",
      "loudness_targets": {
        "integrated_lufs": -14,
        "true_peak_dbtp": -1.0
      }
    },
    "naming_conventions": {
      "sequence_id_format": "SEQ{##}",
      "scene_id_format": "S{##}",
      "shot_id_format": "SH{##}",
      "full_shot_ref_format": "{SEQ##}.{S##}.{SH##}",
      "filename_pattern": "{PROJECT}_{SEQ##}_{S##}_{SH##}_{TYPE}_{desc}_v{###}.{ext}",
      "example": "FULL_SEQ01_S01_SH01_VFX_shimmer-element_v001.png"
    }
  },
  "localization": {
    "default_language": "en",
    "supported_languages": ["en", "ar"],
    "text_style_refs": {
      "captions_style_ref": "TXT_CAPTIONS_DEFAULT",
      "on_screen_text_style_ref": "TXT_OST_DEFAULT"
    }
  },
  "rights_and_credits": {
    "copyright_notice": "© 2026 VideoFormation. All rights reserved.",
    "music_cue_sheet_hint": "Maintain cue sheet from audio assets used in sequence.",
    "asset_rights_overrides": []
