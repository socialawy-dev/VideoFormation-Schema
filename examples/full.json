{
  "$schema": "../schemas/blueprint.schema.json",
  "project_metadata": {
    "system_codename": "videoformation",
    "project_id": "FULL_EXAMPLE_01",
    "title": "Full Example Video",
    "description": "A comprehensive video project showcasing all blueprint features.",
    "content_type": "shortfilm",
    "created_date": "2026-02-10",
    "owner": "VideoFormation Team",
    "versioning": {
      "blueprint_version": "1.1",
      "schema_versioning": {
        "blueprint_schema": "1.1",
        "otio_compatibility": "0.15.0",
        "upgrade_path": ["1.0→1.1"]
      },
      "project_version": "1.0.0",
      "change_log": [
        {
          "date": "2026-02-10",
          "author": "VideoFormation Team",
          "summary": "Complete example blueprint with all features"
        }
      ]
    }
